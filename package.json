{
  "name": "vitrine-de-craques-web-site",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.17.0 <21",
    "npm": ">=9"
  },
  "scripts": {
    "dev": "npm run generate && next dev",
    "build": "npx prisma generate && next build",
    "postbuild": "node scripts/copy-prisma-artifacts.js",
    "start": "HOSTNAME=0.0.0.0 next start -H 0.0.0.0 -p ${PORT:-3000}",
    "lint": "next lint",
    "format": "prettier --write .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "db:push": "npx prisma db push",
    "db:seed": "ts-node --project tsconfig.seed.json prisma/seed.ts",
    "postinstall": "npx prisma generate",
    "generate": "npx prisma generate",
    "deploy": "npx prisma migrate deploy",
    "figma:routes": "node scripts/update-figma-route-manifest.js"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@aws-sdk/client-s3": "^3.894.0",
    "@azure/storage-blob": "^12.28.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@hookform/resolvers": "^3.10.0",
    "@prisma/client": "^6.16.2",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/bcryptjs": "^2.4.6",
    "applicationinsights": "^2.9.4",
    "autoprefixer": "^10.0.1",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fluent-ffmpeg": "^2.1.3",
    "lucide-react": "^0.354.0",
    "next": "^14.2.32",
    "next-auth": "^4.24.7",
    "pg": "^8.16.3",
    "postcss": "^8",
    "react": "^18",
    "react-dom": "^18",
    "react-easy-crop": "^5.0.7",
    "react-hook-form": "^7.51.0",
    "sharp": "^0.34.3",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@types/node": "20.19.25",
    "@types/pg": "^8.15.5",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8",
    "eslint-config-next": "14.1.3",
    "husky": "^8.0.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "prisma": "^6.16.2",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
